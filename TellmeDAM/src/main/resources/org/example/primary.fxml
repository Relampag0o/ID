<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.PrimaryController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/beautyforest.png" />
         </image>
      </ImageView>
      <StackPane layoutX="14.0" layoutY="14.0" prefHeight="372.0" prefWidth="572.0">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" StackPane.alignment="CENTER">
               <children>
                  <StackPane maxWidth="200.0" style="-fx-background-color: rgba(255, 255, 255, 0.7); -fx-padding: 10;">
                     <children>
                        <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@/user.svg" />
                           </image>
                        </ImageView>
                        <TextField fx:id="emailField" promptText="Email" style="-fx-pref-width: 200; -fx-background-color: transparent; -fx-background-radius: 15;" />
                     </children>
                  </StackPane>
                  <StackPane maxWidth="200.0" style="-fx-background-color: rgba(255, 255, 255, 0.7); -fx-padding: 10;">
                     <children>
                        <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@/user.svg" />
                           </image>
                        </ImageView>
                        <PasswordField fx:id="passwordField" promptText="Password" style="-fx-pref-width: 200; -fx-background-color: transparent; -fx-background-radius: 15;" />
                     </children>
                  </StackPane>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <CheckBox fx:id="rememberMe" mnemonicParsing="false" text="Remember me" />
                        <Hyperlink fx:id="forgotPassword" text="Forgot password?" />
                     </children>
                  </HBox>
                  <Button fx:id="loginButton" maxWidth="200.0" mnemonicParsing="false" text="Login" onAction="#login" />
                  <Hyperlink fx:id="registerLink" text="Don't have an account? Register" onAction="#switchToSecondary"/>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <StackPane.margin>
                  <Insets />
               </StackPane.margin>
            </VBox>
         </children>
      </StackPane>
   </children>
</AnchorPane>
